/**index.wxss**/

.userinfo {
  display: flex;
  flex-direction: column;
}

.header {
  background: #84ff6f;
  height: 155rpx;
  width: 100%;
  flex-wrap: wrap;
  align-content: space-between;
}

.row {
  display: flex;
  justify-content: center;
}

.title_img {
  height: 120rpx;
  width: 570rpx;
}

.title_btn {
  width: 150rpx;
  height: 55rpx;
  /*border-radius: 50%;*/
  background: #e8e8e8;
  margin-left: 0;
  margin-right: 0;
  line-height: 1.5555555600000004;
}

.content {
  background: #f1fff6;
  width: 100%;
  margin-top: 5rpx;
  height: 1088rpx;
  display: flex;
  flex-wrap: wrap;
  border-top: solid #84ff6f 1rpx;
  background-image: url("http://olz56fhru.bkt.clouddn.com/bk3.png");
  background-size: 100% 100%;
}

.tap_swiper {
  width: 100%;
  height: 100%;
  display: flex;
}

.tap {
  display: flex;
  /*flex-direction: column;*/
  flex-wrap: wrap;
  padding-top: 50rpx;
  padding-left: 50rpx;
  padding-right: 50rpx;
}

.tap_row {
  flex-basis: 100%;
  display: flex;
  justify-content: space-between;
  /*flex-direction: column;*/
  align-content: space-between;
}

.tap_item {
  border: solid black 1px;
  border-radius: 10%;
  margin: 20rpx 5rpx;
  width: 40%;
  height: 120rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: url("http://olz56fhru.bkt.clouddn.com/tap_bk.png");
  background-size: 100% auto;
}

.tap_scroll {
  width: 100%;
  height: 1000rpx;
}
