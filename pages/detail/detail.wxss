.header {
  display: flex;
  display: -webkit-flex;
  width: 100%;
  height: 57rpx;
  background: #84ff6f;
  justify-content: center;
}

.header_text {
  font-family: 楷体;
  font-size: 80rpx;
  display: flex;
  display: -webkit-flex;
  justify-content: center;
  box-shadow: 0px 0px 5px black;
  border-radius: 30%;
  width: 210rpx;
  height: 85rpx;
  z-index: 1;
}

.content {
  width: 100%;
  height: 100%;
  display: flex;
  /*display: -webkit-flex;*/
  justify-content: center;
}

.content_scroll {
  width: 100%;
  height: 95%;
  display: flex;
  /*display: -webkit-flex;*/
  /*justify-content: center;*/
  /*position: fixed;*/
  background: gainsboro;
}

.item {
  height: 152rpx;
  width: 782rpx;
  margin-top: 30rpx;
  display: flex;
  display: -webkit-flex;
  justify-content: center;
  align-items: center;
}

.thumb {
  width: 21%;
  height: 80%;
  margin-right: -16px;
  z-index: 1;
}

.thumb_img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.introduce {
  border: solid darkgray 0.1mm;
  width: 63%;
  height: 90%;
  padding-left: 17px;
  background: white;
  box-shadow: 0px 0px 5px black;
  margin-right: 20px;
}

.title {
  font-size: 18px;
}

.intro {
  font-size: 12px;
}
